{
  "name": "valora-api-node",
  "version": "1.0.0",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "tsx src/db/migrate.ts",
    "db:seed": "tsx scripts/seed.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "valora",
    "api",
    "fastify",
    "postgres",
    "rates",
    "forex",
    "metals"
  ],
  "author": "Valora Team",
  "license": "MIT",
  "description": "Valora API - Production-ready Node.js API for financial rates",
  "dependencies": {
    "@fastify/cors": "^11.2.0",
    "@fastify/helmet": "^13.0.2",
    "@fastify/rate-limit": "^10.3.0",
    "drizzle-orm": "^0.45.1",
    "fast-xml-parser": "^5.3.4",
    "fastify": "^5.7.4",
    "firebase-admin": "^13.6.1",
    "node-cron": "^4.2.1",
    "pino": "^10.3.0",
    "postgres": "^3.4.8",
    "rate-limiter-flexible": "^9.1.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@types/node": "^25.2.1",
    "@vitest/ui": "^3.2.4",
    "drizzle-kit": "^0.31.8",
    "pino-pretty": "^13.1.3",
    "playwright": "^1.58.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  }
}
